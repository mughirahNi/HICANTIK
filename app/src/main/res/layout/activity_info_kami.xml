<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile">

    <ImageView
        android:id="@+id/logok"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/img"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/iapk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info Aplikasi"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/logok"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:layout_below="@id/iapk"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txvinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:text="Kerang Team :)"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txvara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="42520001_Adeni Putri Ramadhani"
        android:gravity="center"
        android:layout_below="@+id/txvinfo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txvmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="42520013_Mughirah Nur Indun S"
        android:layout_below="@id/txvara"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btninfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvmg"
        android:gravity="center"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:text="Dashboard"
        android:background="@drawable/buttons"/>

</RelativeLayout>